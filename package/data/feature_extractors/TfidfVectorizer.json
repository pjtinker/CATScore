{
    "model_base" : "sklearn",
    "model_module" : "sklearn.feature_extraction.text",
    "model_class" : "TfidfVectorizer",
    "TfidfVectorizer" : {
        "Parameters" : {
            "ngram_range" : {
                "type" : "range",
                "min" : 1,
                "max" : 9,
                "default" : 1
            },
            "encoding" : {
                "type" : "dropdown",
                "default" : "utf-8",
                "options" : {
                    "utf-8" : "utf-8",
                    "latin-1" : "latin-1"
                }
            },
            "strip_accents" : {
                "type" : "dropdown",
                "default" : 0,
                "options" : {
                    "None" : "",
                    "ascii" : "ascii",
                    "unicode" : "unicode"
                }
            },
            "use_idf" : {
                "type" : "dropdown",
                "default" : true,
                "options" : {
                    "False" : false,
                    "True" : true
                }
            }
        }   
    }
}