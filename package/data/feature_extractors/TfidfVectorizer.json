{
    "model_base" : "sklearn",
    "model_module" : "sklearn.feature_extraction.text",
    "model_class" : "TfidfVectorizer",
    "TfidfVectorizer" : {
        "Parameters" : {
            "ngram_range" : {
                "type" : "range",
                "min" : 1,
                "max" : 9,
                "default" : 1,
                "tunable" : true
            },
            "encoding" : {
                "type" : "dropdown",
                "default" : "utf-8",
                "options" : {
                    "utf-8" : "utf-8",
                    "latin-1" : "latin-1"
                },
                "tunable" : true
            },
            "strip_accents" : {
                "type" : "dropdown",
                "default" : 0,
                "options" : {
                    "None" : "",
                    "ascii" : "ascii",
                    "unicode" : "unicode"
                },
                "tunable" : true
            },
            "max_df" : {
                "type" : "double",
                "default" :1.0,
                "min" : 0,
                "max" : 1.0,
                "step_size" : 0.1,
                "decimal_len" : 1,
                "tunable" : false
            },
            "min_df" : {
                "type" : "int",
                "default" : 1,
                "min" : 0,
                "max" : 1000,
                "step_size" : 1,
                "tunable" : false
            },
            "use_idf" : {
                "type" : "dropdown",
                "default" : true,
                "options" : {
                    "False" : false,
                    "True" : true
                },
                "tunable" : true
            }
        }   
    }
}